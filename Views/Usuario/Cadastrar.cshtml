@using NewRepository.Dto
@model UsuarioCriacaoDto

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger text-dark" role="alert">
        @TempData["MensagemErro"]
    </div>
}

@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success text-dark" role="alert">
        @TempData["MensagemSucesso"]
    </div>
}


@{
    Layout = "_Layout";
}

<style>
    /* Estilo geral */
    body {
        font-family: 'Arial', sans-serif;
        background: linear-gradient(135deg, #f5f7fa, #7B68EE);
        margin: 0;
        padding: 0;
        overflow-x: hidden;
    }
</style>

<div class="container mt-5">
    <form method="post" asp-action="Cadastrar" asp-controller="Usuario">


        <div class="mb-3">
            <label class="form-label">Email:</label>
            <input type="email" asp-for="Email" class="form-control shadow-none">
            <span class="text-danger" asp-validation-for="Email"></span> <!-- Exibe o erro do email -->
        </div>

        <div class="mb-3">
            <label class="form-label">Razão Social:</label>
            <input type="text" asp-for="RazaoSocial" class="form-control shadow-none">
            <span class="text-danger" asp-validation-for="RazaoSocial"></span> <!-- Exibe o erro da razão social -->
        </div>

        <div class="mb-3">
            <label class="form-label">Nome Fantasia:</label>
            <input type="text" asp-for="NomeFantasia" class="form-control shadow-none">
            <span class="text-danger" asp-validation-for="NomeFantasia"></span> <!-- Exibe o erro do nome fantasia -->
        </div>

        <div class="mb-3">
            <label>CNPJ:</label>
            <input type="text" class="form-control" asp-for="Cnpj" />
            <span asp-validation-for="Cnpj" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label>Endereço:</label>
            <input type="text" class="form-control" asp-for="Endereco" />
            <span asp-validation-for="Endereco" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label>Telefone:</label>
            <input type="text" class="form-control" asp-for="Telefone" />
            <span asp-validation-for="Telefone" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label>Senha:</label>
            <input type="password" class="form-control" asp-for="Senha" />
            <span asp-validation-for="Senha" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label>Confirma Senha:</label>
            <input type="password" class="form-control" asp-for="ConfirmaSenha" />
            <span asp-validation-for="ConfirmaSenha" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success text-center w-100 mb-3" style="color:black; font-weight: bold">Cadastrar</button>
        <a class="btn btn-info text-center w-100" style="color:black; font-weight: bold" asp-controller="Home" asp-action="Index">Voltar</a>
    </form>
</div>
