@using NewRepository

@{
    Layout = "_Layout";
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger text-dark" role="alert">
        @TempData["MensagemErro"]
    </div>
}

<style>
    /* Fundo desfocado */
    .background-blur {
        background: linear-gradient(135deg, #f5f7fa, #7B68EE);
        filter: blur(5px);
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
    }

    /* Container centralizado */
    .content-container {
        background: linear-gradient(50deg, #f5f7fa, #808080);
        padding: 30px;
        border-radius: 15px;
        max-width: 1200px;
        margin: 60px auto;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
        position: relative;
        z-index: 1;
        display: flex;
        flex-direction: column;
        align-items: center;
        border: 2px solid black;
    }

    .btn-voltar {
        margin-top: 30px;
        padding: 12px 25px;
        background-color: #007bff;
        color: white;
        border-radius: 50px;
        text-decoration: none;
        font-size: 1.1rem;
        font-weight: bold;
        transition: all 0.3s ease;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
        text-align: center;
    }

    .btn-voltar:hover {
        background-color: #FFD700;
        color: black;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.25);
    }

    /* Estilos da seção da equipe */
    .team-title {
        font-size: 2.5rem;
        font-weight: bold;
        margin-bottom: 40px;
        color: #000;
        text-align: center;
        text-shadow: 0px 2px 4px rgba(0, 0, 0, 0.2);
    }

    .team-members {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        gap: 30px;
        justify-items: center;
        width: 100%;

    }

    .team-member {
        text-align: center;
        transition: transform 0.3s ease, box-shadow 0.3s ease;

        
    }

    .team-member:hover {
        transform: translateY(-10px);
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
    }

    .team-member img {
        width: 150px;
        height: 150px;
        object-fit: cover;
        border-radius: 50%;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .team-member:hover img {
        transform: scale(1.1);
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.4);
    }

    .team-member-name {
        font-size: 1.1rem;
        color: #000;
        margin-top: 15px;
        font-weight: bold;
    }

    /* Responsividade */
    media (max-width: 600px) {
        .team-title {
            font-size: 1.8rem;
        }

        .team-member img {
            width: 120px;
            height: 120px;
        }

        .team-member-name {
            font-size: 0.9rem;
        }

        .btn-voltar {
            font-size: 1rem;
            padding: 10px 20px;
        }
    }
</style>


<!-- Fundo desfocado -->
<div class="background-blur"></div>

<!-- Container principal com o conteúdo da equipe -->
<div class="content-container">
    <div class="team-title">Nossa Equipe</div>

    <div class="team-members">
        <!-- Primeiro membro -->
        <div class="team-member">
            <img src="~/imagem/Equipe/Guilherme.jpg" alt="Foto de Guilherme de Oliveira Lobo" />
            <div class="team-member-name">Guilherme de Oliveira Lobo</div>
        </div>

        <!-- Segundo membro -->
        <div class="team-member">
            <img src="~/imagem/Equipe/igor.jpg" alt="Foto de Igor Matheus de Oliveira Batista" />
            <div class="team-member-name">Igor Matheus de Oliveira Batista</div>
        </div>

        <!-- Terceiro membro -->
        <div class="team-member">
            <img src="~/imagem/Equipe/Luccas.jpeg" alt="Foto de Luccas Henrique Cardum Bismara" />
            <div class="team-member-name">Luccas Henrique Cardum Bismara</div>
        </div>

        <!-- Quarto membro -->
        <div class="team-member">
            <img src="~/imagem/Equipe/Matheus.jpeg" alt="Foto de Matheus Antunes dos Santos" />
            <div class="team-member-name">Matheus Antunes dos Santos</div>
        </div>

        <!-- Quinto membro -->
        <div class="team-member">
            <img src="~/imagem/Equipe/Vinicius.jpg" alt="Foto de Vinicius Wenzel Bulik Moreira" />
            <div class="team-member-name">Vinicius Wenzel Bulik Moreira</div>
        </div>
    </div>
</div>
<a class="btn-voltar" asp-controller="Home" asp-action="Index">
    <i class="bi bi-arrow-left-circle"></i> Voltar
</a>
