<style>
    body, html {
        margin: 0;
        padding: 0;
        height: 100%;
        overflow: hidden;
        font-family: 'Arial', sans-serif;
    }

    /* Background desfocado */
    .login-background {
        background: linear-gradient(135deg, #f5f7fa, #7B68EE);
        filter: blur(5px);
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
    }

    /* Centralização principal */
    .login-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 80vh;
    }

    /* Formulário principal */
    .login-container {
        background: linear-gradient(50deg, #f5f7fa, #808080);
        padding: 40px;
        border-radius: 10px;
        max-width: 400px;
        width: 100%;
        box-shadow: 0px 6px 12px rgba(0, 0, 0, 0.2);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: 2px solid black;
    }

    .login-container:hover {
        transform: translateY(-5px);
        box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.3);
    }

    /* Títulos das seções */
    .section-title {
        font-size: 1.8rem;
        font-weight: bold;
        color: #000;
        margin-bottom: 10px;
        text-align: center;
        text-shadow: 0px 2px 4px rgba(0, 0, 0, 0.2);
    }

    /* Texto da seção */
    .content-text {
        text-align: center;
        font-size: 1.1rem;
        color: #000;
        margin-bottom: 20px;
    }

    /* Botão Voltar */
    .btn-voltar {
        display: inline-block;
        margin-top: 30px;
        padding: 12px 25px;
        background-color: #007bff;
        color: white;
        border-radius: 50px;
        text-decoration: none;
        font-size: 1.1rem;
        font-weight: bold;
        text-align: center;
        transition: background-color 0.3s ease, transform 0.3s ease;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
    }

    .btn-voltar:hover {
        background-color: #FFD700;
        color: black;
        transform: translateY(-3px);
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.25);
    }

    /* Ícones sociais */
    .social-icons a {
        margin: 0 10px;
        color: #000;
        text-decoration: none;
        font-size: 1.5rem;
        transition: color 0.3s ease, transform 0.3s ease;
    }

    .social-icons a:hover {
        color: #FFD700;
        transform: scale(1.2);
    }

    /* Responsividade */
    media (max-width: 600px) {
        .login-container {
            padding: 20px;
        }

        .section-title {
            font-size: 1.5rem;
        }

        .content-text {
            font-size: 1rem;
        }

        .btn-voltar {
            font-size: 1rem;
            padding: 10px 20px;
        }
    }
</style>

<div class="login-background"></div>

<div class="login-wrapper">
    <div class="login-container">
        <!-- Seção de Contato -->
        <div class="content-section">
            <div class="section-title">Contato</div>
            <div class="content-text">
                Email: findbooks2024@hotmail.com <br />
                Telefone: (15) 0000-0000
            </div>
        </div>

        <!-- Redes sociais -->
        <div class="content-section">
            <div class="section-title">Siga-nos</div>
            <div class="content-text social-icons">
                <a href="https://www.instagram.com" target="_blank" title="Instagram">
                    <i class="bi bi-instagram"></i>
                </a>
                <a href="https://www.twitter.com" target="_blank" title="Twitter">
                    <i class="bi bi-twitter"></i>
                </a>
                <a href="https://www.facebook.com" target="_blank" title="Facebook">
                    <i class="bi bi-facebook"></i>
                </a>
            </div>
        </div>
    </div>
</div>

