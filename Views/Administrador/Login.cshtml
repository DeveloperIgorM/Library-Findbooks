@using NewRepository.Dto
@model LoginDto

@{
    Layout = "_Layout";
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger text-dark" role="alert">
        @TempData["MensagemErro"]
    </div>
}

<style>
    body, html {
        margin: 0;
        padding: 0;
        height: 100%;
        font-family: 'Arial', sans-serif;
        background: linear-gradient(135deg, #f5f7fa, #7B68EE);
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    /* Wrapper principal */
    .login-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        height: calc(100vh - 100px); /* Altura total menos o cabeçalho e rodapé */
        padding: 0 20px;
    }

    /* Container do login */
    .login-container {
        width: 400px;
        background: linear-gradient(50deg, #f5f7fa, #808080);
        border: 2px solid black;
        border-radius: 15px;
        box-shadow: 0 30px 50px rgba(0, 0, 0, 0.2);
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 0; /* Remove o padding geral */
        overflow: hidden;
    }

    /* Espaço para imagem no topo */
    .login-image-container {
        width: 100%;
        height: 120px;
        background: #ccc; /* Cor de fundo para representar a área da imagem */
        display: flex;
        justify-content: center;
        align-items: center;
        border-top-left-radius: 15px;
        border-top-right-radius: 15px;
    }

        .login-image-container img {
            max-width: 100%;
            max-height: 100%;
            /*  object-fit: cover;*/
        }

    /* Conteúdo do formulário */
    .login-form-content {
        padding: 30px;
        text-align: center;
    }

    .login-title {
        font-size: 1.8rem;
        color: #000;
        margin-bottom: 20px;
        font-weight: bold;
    }

    .form-group {
        width: 100%;
        margin-bottom: 15px;
    }

        .form-group label {
            font-size: 0.9rem;
            color: #000;
            text-align: left;
            display: block;
            margin-bottom: 5px;
        }

    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 5px;
        font-size: 1rem;
        background-color: #f9f9f9;
    }

        .form-control:focus {
            outline: none;
            border-color: #0000CC;
            box-shadow: 0 0 5px rgba(22, 36, 48, 0.5);
        }

    /* Botão */
    .btn-primary {
        width: 100%;
        padding: 10px;
        font-size: 1rem;
        color: #fff;
        background: linear-gradient(to right, #7b4397, #dc2430);
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: all 0.3s ease;
        margin-top: 10px;
    }

        .btn-primary:hover {
            background: linear-gradient(to right, #6a3784, #c1223b);
        }

    /* Links */
    .login-links {
        margin-top: 15px;
        font-size: 0.9rem;
    }

        .login-links a {
            color: #000;
            text-decoration: none;
            margin: 0 10px;
        }

            .login-links a:hover {
                text-decoration: underline;
            }


</style>

<!-- Container do login -->
<div class="login-wrapper">
    <div class="login-container">
        <!-- Espaço para imagem -->
        <div class="login-image-container">
            <!-- Substitua pelo caminho da imagem -->
            <img src="~/imagem/logotipo.png" alt="Imagem de Login" height="auto" width="350px">
        </div>

        <!-- Conteúdo do formulário -->
        <div class="login-form-content">
            <h1 class="login-title">Administrador</h1>
            <form method="post" asp-controller="Administrador" asp-action="Login">
                <div class="form-group">
                    <label for="email">Username</label>
                    <input type="email" id="email" asp-for="Email" class="form-control" placeholder="Digite seu usuário" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" asp-for="Senha" class="form-control" placeholder="Digite sua senha" />
                    <span asp-validation-for="Senha" class="text-danger"></span>
                </div>

                <button type="submit" class="btn-primary">Avançar</button>
            </form>

            <div class="login-links">
                <a asp-controller="Usuario" asp-action="SolicitarRedefinicaoSenha">Esqueceu sua senha?</a>
            </div>
        </div>
    </div>
</div>

