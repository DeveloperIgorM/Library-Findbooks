@model IEnumerable<LivroModel>



@{
    Layout = "_Layout";
}

<div class="py-5">
    <div class="container">

        <div class="text-center mb-5">
            <a class="btn btn-success" asp-action="Cadastrar" asp-controller="Livros">Cadastrar novo Livro!</a>
        </div>
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-0">

            <!--"Model -> lista de livros"-->
            @if (Model != null)
            {
                @if (Model.Count() > 0)
                {
                    @foreach (var livros in Model)
                    {
                        <div class="card mx-3 my-3 p-2" style="width: 12rem">

                            @if (livros.Capa != null)
                            {
                                <img src="/imagem/@livros.Capa" class="card-img-top" style="width: 175px; height: 150px" />
                            }
                            else
                            {
                                <img src="..." class="card-img-top" />
                            }

                            <div class="card-body">
                                <h5 class="card-title">@livros.Titulo</h5>
                            </div>

                            <div class="card-body">
                                <a class="btn btn-warning w-100" asp-action="Editar" asp-controller="Livros" asp-route-id="@livros.Id">Editar</a>
                                <a class="btn btn-danger w-100" asp-action="Remover" asp-controller="Livros" asp-route-id="@livros.Id">Remover</a>
                            </div>
                        </div>
                    }
                }
            }

        </div>
    </div>
</div>