@model LivroModel

@{
    Layout = "_Layout";
}

<div class="container mt-5">
    @if (!ViewBag.UsuarioLogado)
    {
        <div class="alert alert-danger" role="alert">
            Você precisa estar logado para acessar esta página.
        </div>
    }
    else
    {
        <form method="post" asp-action="Editar" asp-controller="Livros" enctype="multipart/form-data">
            <h2>Edição de Livros - @Model.Titulo</h2>

            <input type="hidden" asp-for="Id" />

            @if (Model.Capa != null)
            {
                <div class="text-center">
                    <label for="ImageFile">
                        <img src="/imagem/@Model.Capa" id="img" style="width:150px; height:200px" />
                    </label>
                </div>
            }

            <input type="hidden" asp-for="Capa" />
            <div class="mb-1">
                <label class="form-label mt-3">Capa:</label>
                <input type="file" id="ImageFile" name="foto" class="form-control shadow-none" />
            </div>

            <div class="mb-1">
                <label class="form-label">Isbn:</label>
                <input type="number" min="1" step="any" asp-for="Isbn" class="form-control shadow-none">
                <span class="text-danger" asp-validation-for="Isbn"></span>
            </div>

            <div class="mb-1">
                <label class="form-label">Titulo:</label>
                <textarea type="text" asp-for="Titulo" class="form-control shadow-none"></textarea>
                <span class="text-danger" asp-validation-for="Titulo"></span>
            </div>

            <div class="mb-1">
                <label class="form-label">Autor:</label>
                <textarea type="text" asp-for="Autor" class="form-control shadow-none"> </textarea>
                <span class="text-danger" asp-validation-for="Autor"></span>
            </div>

            <div class="mb-1">
                <label class="form-label">Nome da Editatora:</label>
                <textarea type="text" asp-for="NomeEditatora" class="form-control shadow-none"> </textarea>
                <span class="text-danger" asp-validation-for="NomeEditatora"></span>
            </div>

            <div class="mb-1">
                <label class="form-label">Genêro:</label>
                <textarea type="text" asp-for="Genero" class="form-control shadow-none"> </textarea>
                <span class="text-danger" asp-validation-for="Genero"></span>
            </div>

            <div class="mb-1">
                <label class="form-label">Data de Publicação:</label>
                <input type="date" asp-for="AnoPublicacao" class="form-control shadow-none" />
                <span class="text-danger" asp-validation-for="AnoPublicacao"></span>
            </div>

            <div class="mb-1">
                <label class="form-label">Data de Inserção do Livro:</label>
                <input type="date" asp-for="DataAdd" class="form-control shadow-none" />
                <span class="text-danger" asp-validation-for="DataAdd"></span>
            </div>

            <div class="btn-box d-flex mt-3">
                <button type="submit" class="btn btn-success w-50 mx-1"><i class="bi bi-plus-circle"></i> Cadastrar!</button>
                <a class="btn btn-info w-50" asp-controller="Livros" asp-action="Index"><i class="bi bi-arrow-left-circle"></i> Voltar</a>
            </div>
        </form>
    }
</div>

<script>
    const inputFile = document.querySelector("#ImageFile");

    inputFile.addEventListener("change", function (e) {
        const inputTarget = e.target;
        const file = inputTarget.files[0];

        if (file) {
            const reader = new FileReader();

            reader.addEventListener("load", function (e) {
                const readerTarget = e.target;
                const img = document.querySelector("#img");
                img.src = readerTarget.result;
            });

            reader.readAsDataURL(file);
        }
    });
</script>
