@model LivroModel

@{
    Layout = "_Layout";
}

<div class="container my-5">
        <div class="p-5 text-center bg-body-tertiary rounded-3">
            <img src="/imagem/@Model.Capa" style="width:350px; height:350px" />
            <h1 class="text-body-emphasis">@Model.Titulo</h1>
            <p class="col-lg-8 mx-auto fs-5 text-muted">
                @Model.Titulo
            </p>

            <a class="btn btn-info w-50 mt-3" asp-controller="Home" asp-action="Index"><i class="bi bi-arrow-left-circle"></i> Voltar</a>
        </div>
</div>
