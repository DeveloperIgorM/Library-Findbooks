@model LivroModel
@{
    Layout = "_Layout";
}

<style>
    /* Estilo geral */
    body {
        font-family: 'Arial', sans-serif;
        background: linear-gradient(135deg, #f5f7fa, #7B68EE);
        margin: 0;
        padding: 0;
        overflow-x: hidden;
    }
</style>

<nav>
    @if (ViewBag.UsuarioLogado != null && (bool)ViewBag.UsuarioLogado)
    {
        <div class="detalhes-livro">
            <h2>@Model.Titulo</h2>
            <img src="~/imagem/@Model.Capa" alt="Capa do Livro" />
            <p>Autor: @Model.Autor</p>
            <p>ISBN: @Model.Isbn</p>
            <p>Ano de Publicação: @Model.AnoPublicacao</p>

            <h4>Disponível nas seguintes instituições:</h4>
            <ul>
                @foreach (var instLivro in Model.InstituicaoLivros)
                {
                    <li>@instLivro.Usuario.NomeFantasia - Quantidade: @instLivro.Quantidade</li>
                }
            </ul>
        </div>

        <a class="btn btn-info w-50 mt-3" asp-controller="Home" asp-action="Index">
            <i class="bi bi-arrow-left-circle"></i> Voltar
        </a>

    }
    else
    {

        <div class="detalhes-livro">
            <h2>@Model.Titulo</h2>
            <img src="~/imagem/@Model.Capa" alt="Capa do Livro" />
            <p>Autor: @Model.Autor</p>
            <p>ISBN: @Model.Isbn</p>
            <p>Ano de Publicação: @Model.AnoPublicacao</p>

            <h4>Disponível nas seguintes instituições:</h4>
            <ul>
                @foreach (var instLivro in Model.InstituicaoLivros)
                {
                    <li>@instLivro.Usuario.NomeFantasia - Quantidade: @instLivro.Quantidade</li>
                }
            </ul>
        </div>

        <a class="btn btn-info w-50 mt-3" asp-controller="Home" asp-action="Index">
            <i class="bi bi-arrow-left-circle"></i> Voltar
        </a>

    }
</nav>
